" config file for https://github.com/1995eaton/chromium-vim

""""""""""""""""
" META
""""""""""""""""

set localconfig
let configpath = '/home/ross/.cvimrc'


""""""""""""""""
" SETTINGS
""""""""""""""""

let mapleader = ','

set cncpcompletion


" TABS

set defaultnewtabpage


" LINKS

set linkanimations
let hintcharacters = 'aoeusnthidkbpg'


" SCROLLING

" set nosmoothscroll
" let scrollduration=10


" UI

let barposition = 'bottom'
let highlight = '#00afff'
let activehighlight = '#0087ff'
set autohidecursor


" SEARCHING

let completionengines = ['google', 'amazon']
let searchalias g = 'google'
let searchalias a = 'amazon'


" BLACKLIST

let blacklists = []


""""""""""""""""
" MAPPINGS
""""""""""""""""

map ; :

map i goToInput
map a goToInput

unmap <Space>


" SCROLLING

map <C-e> scrollDown
map <C-y> scrollUp
map <C-d> scrollPageDown
map <C-u> scrollPageUp
map <C-f> scrollFullPageDown
map <C-b> scrollFullPageUp


" TABS

map <A-n> nextTab
map <A-p> previousTab
imap <A-n> nextTab
imap <A-p> previousTab

map D closeTab
map <Space>bc closeTab

map u lastClosedTab

map <Leader>r reloadTab
map <Leader>R reloadTabUncached


" INPUT

imap <C-o> editWithVim


" CHROME

map <Leader><Leader>r :chrome://restart
map <Leader><Leader>R :chrome://restart<CR>
