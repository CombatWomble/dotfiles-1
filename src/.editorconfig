# EditorConfig helps developers define and maintain consistent
# coding styles between different editors and IDEs
# editorconfig.org

root = true


[*]
charset = utf-8
end_of_line = lf
indent_style = tab
insert_final_newline = true
tab_width = 2
trim_trailing_whitespace = true

[*.js]
max_line_length = 120

[*.{diff,md}]
trim_trailing_whitespace = false
